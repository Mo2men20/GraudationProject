@model IEnumerable<Location>

@{
    Layout = "_Layout";
    ViewBag.Title = "J.U.S.T Database";
    ViewBag.Purpose = "All stored locations.";
}

@section pageStuff {
    <script src="~/lib/SearchBox.js"></script>
}


    <div class="row">
        <div class="col-lg-12">
            <h2>Stored Locations:   </h2>
            
            <div class="form-group has-success">
                <input oninput="w3.filterHTML('#my-table', 'tr', this.value)" class="form-control" placeholder="Search for records..">
            </div>

            <div style="overflow-y:scroll;height:400px">
                <div class="table-responsive">
                    <table id="my-table" class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>UUID</th>
                                <th>Longitude</th>
                                <th>Latitude</th>
                                <th>Speed (Meter/Secend)</th>
                                <th>Date & Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Location x in Model)
                            {
                                <tr class="">
                                    <td class="">@x.UUID</td>
                                    <td class="">@x.Longitude</td>
                                    <td class="">@x.Latitude</td>
                                    <td class="">@string.Format("{0:N2}m/s",x.Speed)</td>
                                    <td class="">@x.GeneratingTime</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


