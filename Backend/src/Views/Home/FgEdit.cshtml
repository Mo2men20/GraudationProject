@model Foreground_Settings
@{
    Layout = "_Layout";
    ViewBag.Title = "Foreground Tracker Settings";
    ViewBag.Purpose = "Edit.";
}



<div class="row">
    <div class="col-lg-12">
        <form role="form" asp-action="FgEdit" asp-controller="Home" method="post">
            <div class="form-group">
                <label asp-for="@Model.Frequency">Frequency</label>
                <input asp-for="@Model.Frequency" value="@Model.Frequency" class="form-control">
                <p class="help-block"></p>
            </div>



            <div class="form-group">
                <div class="checkbox">
                    <label>
                        @if (Model.EnableHighAccuracy) {
                        <input type="checkbox" asp-for="@Model.EnableHighAccuracy" checked="checked">
                        }else{ 
                        <input type="checkbox" asp-for="@Model.EnableHighAccuracy">
                        }
                        Enable High Accuracy</label>
                </div>
            </div>

            <hr />
            <button type="submit" class="btn btn-primary pull-right">Submit</button>
        </form>
    </div>
</div>



